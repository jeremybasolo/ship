  #     - ./php-7.4/php.ini:/usr/local/etc/php/conf.d/php.ini:ro
  #   networks:
  #     - ep_network

  # php8.0:
  #   build: ./php-8.0/
  #   container_name: ep-php8
  #   restart: always
