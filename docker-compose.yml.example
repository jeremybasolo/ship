version: '3'

services:

  mailhog:
    image: mailhog/mailhog:latest
    container_name: ep-mailhog
    restart: always
    logging:
      driver: 'none'
    ports:
      - 8025:8025
      - 1025:1025
    networks:
      - ep_network

  # php7.4:
